			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let cookieHeader = pm.response.headers.get(\"Set-Cookie\");\r",
							"if (cookieHeader) {\r",
							"    let token = cookieHeader.match(/token=([^;]+)/)[1];\r",
							"    pm.collectionVariables.set(\"token\", token);\r",
							"    console.log(\"Токен сохранён в коллекцию:\", token);\r",
							"} else {\r",
							"    console.log(\"Не удалось получить токен из ответа\");\r",
							"}"
						],
